upstream sandman {
    server 127.0.0.1:{{sandman_server_port}};
}

# the nginx server instance
server {
    server_name {{sandman_server_external_host}};

    listen {{sandman_server_external_port}};

    location / {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header Host $http_host;
      proxy_set_header X-NginX-Proxy true;

      access_log /var/log/nginx/sandman_access.log;
{% if use_secure_http %}
      proxy_pass https://sandman;
{% else %}
      proxy_pass http://sandman;
{% endif %}
      proxy_redirect off;
    }

{% if use_secure_http %}
    ssl on;
    ssl_certificate /etc/nginx/ssl/{{certificate_crt_filename}};
    ssl_certificate_key /etc/nginx/ssl/{{certificate_key_filename}};
{% endif %}
}

{% if sandman_server_external_port != 80 and http_redirect %}
server {
    server_name {{sandman_server_host}};
    listen 80;
    listen [::]:80;
    return 301 https://$server_name$request_uri;
}
{% endif %}
