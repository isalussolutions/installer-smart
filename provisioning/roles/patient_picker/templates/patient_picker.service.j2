[Unit]
Description=HSPC Patient Picker Server

[Service]
User={{hosting_username}}
TimeoutStartSec=infinity
WorkingDirectory={{hosting_user_home}}/patient_picker

ExecStart={{java_home}}/bin/java \
 -Xms{{patient_picker_server_initial_memory}} \
 -Xmx{{patient_picker_server_max_memory}} \
 -Dserver.port={{patient_picker_server_port}} \
 -Dhspc.reference.api.url={{api_default_sandbox_url}} \
{% if use_secure_http %}
 -Dserver.ssl.key-store={{hosting_user_home}}/keystore \
 -Dserver.ssl.key-store-password={{keystore_password}} \
 -Dserver.ssl.keyStoreType=JKS \
{% endif %}
 -jar {{patient_picker_server_artifact_artifact_id}}-{{patient_picker_server_artifact_version}}.{{patient_picker_server_artifact_packaging}}
Restart=always

[Install]
WantedBy=multi-user.target
